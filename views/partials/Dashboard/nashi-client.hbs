{{> Dashboard/Navbar/navbar}}

<div class="nashi-client">
    <h1 class="title">{{title}}</h1>
    <div class="container">
        <div class="row justify-content-between align-items-center p-0">
            {{#each data}}
            <div class="col-3 box">
                <img class="img-fluid" src="/images/{{this.img}}" alt="{{this._id}}">
                <div class="delete ">
                    <a href="/dashboard/nashi-client/delete/{{this._id}}">
                        <i class="bi bi-trash3"></i>
                    </a>
                </div>
            </div>
            {{/each}}
            <div class=" p-0 col-3 my-3 text-center send-box">
                <form action="/dashboard/nashi-client" method="POST" enctype="multipart/form-data">
                    <div class="img-page center ">
                        <h3>180x70</h3>
                        <input type="file" name="img" title="your text" class="userImage"
                            accept="image/png, image/jpg, image/jpeg" / required>
                    </div>
                    <button class=" sendFileButton " type="submit">Send File</button>
                </form>
            </div>
        </div>
    </div>
</div>