{{> Dashboard/Navbar/navbar}}

<div class="spesialist">
    <h1 class="title">{{title}}</h1>
    <div class="container">
        <div class="row align-items-center justify-content-between p-0">


            {{#each spesialist}}
            <div class="col-4 box">
                <img class="img-fluid" src="/images/{{this.img}}" alt="{{this_id}}">
                <p>{{this.professia}}</p>
                 <div class="delete ">
                    <a href="/dashboard/spesialist/delete/{{this._id}}">
                        <i class="bi bi-trash3"></i>
                    </a>
                </div>
            </div>
            {{/each }}
            <div class=" p-0 col-3 my-3 text-center send-box">
                <form action="/dashboard/spesialist" method="POST" enctype="multipart/form-data">
                    <div class="img-page center ">
                        <h3>440x585</h3>
                    <input type="file" name="img" title="your text" class="userImage"
                        accept="image/png, image/jpg, image/jpeg" / required>
                    </div>
                    <input type="text" name="professia" id="" placeholder="Web Dizayner">
                         <button class=" sendFileButton " type="submit">Send File</button>
                </form>
            </div>
        </div>
    </div>
</div>